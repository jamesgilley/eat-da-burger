<h1>Burgers</h1>

<form action="/" method="POST">
<h3>Buy a burger?</h3>
  <div class="input-field">
    <label for="burger_name">Burger Name</label>
    <input type="text" name="burger_name" id="burger_name" placeholder="Burger Name" />
  </div>
  <button>Submit</button>
</form>

<div>
  <h3>Available Burgers:</h3>
    {{#each burgers}}
      {{#if this.devoured}}
      {{else}}
      <form action="/devour" method="POST">
        <label>{{this.burger_name}}</label>
        <input type="hidden" name="ID" value="{{this.ID}}">
        <input type="hidden" name="burger_name" value="{{this.burger_name}}">
        <button>Devour</button>
      </form>
      {{/if}}
    {{/each}}
</div>

<div id="devouredBurgers" style="float:right;">
  <h3 >Devoured Burgers:</h3>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
      <li>{{this.burger_name}}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>